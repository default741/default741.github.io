<header>
    <nav id="navbar"
        class="navbar navbar-light navbar-expand-sm {% if site.navbar_fixed %}fixed-top{% else %}sticky-top{% endif %}"
        role="navigation">
        <div class="container">
            <div class="collapse navbar-collapse text-right" id="navbarNav">
                <ul class="navbar-nav ml-auto flex-nowrap">
                    {% for page in site.pages %}
                    {% if page.permalink == '/' %}
                    {% assign about_title = page.title %}
                    {% endif %}
                    {% endfor %}

                    <li class="nav-item {% if page.permalink == '/' %}active{% endif %}">
                        <a class="nav-link" href="{{ '/' | relative_url }}">
                            {{- about_title }}
                        </a>
                    </li>

                    {% assign sorted_pages = site.pages | sort: 'nav_order' %}
                    {% for p in sorted_pages %}
                    {% if p.nav == true %}
                    <li class="nav-item {% if page.permalink == p.permalink %}active{% endif %}">
                        <a class="nav-link" href="{{ p.url | relative_url }}">
                            {{- p.title }}
                        </a>
                    </li>
                    {% endif %}
                    {% endfor %}
            </div>
        </div>
    </nav>
</header>